<h1>Cocktails</h1>

<table>
  <head>
    <h2>
      <p>Name</p>
      <p colspan="3"></p>
    </h2>
  </head>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Cocktail', new_cocktail_path %>

